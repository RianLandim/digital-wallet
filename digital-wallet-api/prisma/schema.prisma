// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserProvider {
  GOOGLE
  FACEBOOK
}

enum LaunchType {
  CREDIT
  DEBIT 
}

model User {
  id         String        @id @default(uuid())
  email      String        @unique
  provider   UserProvider? @default(GOOGLE)
  providerId String?
  password   String
  name       String
  cpf        String
  earning    Int?
  earningDay Int?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  CreditCard CreditCard[]
}

model CreditCard {
  id          String   @id @default(uuid())
  ownerName   String
  flag        String
  bank        String
  expiratedAt DateTime
  closedAt    DateTime
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Launch {
  id          String   @id @default(uuid())
  value       String
  createdAt   DateTime
  type        LaunchType
}

model Goal {
  id          String   @id @default(uuid())
  value       Int
  limitDate   DateTime
  title       String
  description String
}

model Flag {
  id     String   @id @default(uuid())
  name   String
  image  String
}

model Category {
  id     String   @id @default(uuid())
  name   String
}